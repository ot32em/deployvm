<domain type='xen'>
  <name>libvirt-1</name>
  <memory unit='KiB'>1048576</memory>
  <currentMemory unit='KiB'>1048576</currentMemory>
  <vcpu placement='static'>1</vcpu>
  <hostname>libvirt-1-hostname-xml</hostname>
  <os>
    <type arch='x86_64' machine='xenpv'>linux</type>
    <kernel>/root/vm/kernel/gentoo-kernel.img</kernel>
    <cmdline>root=/dev/xvda1 ip=::::libvirt-1-hostname::dhcp</cmdline>
  </os>
  <clock offset='utc' adjustment='reset'/>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>
  <devices>
    <interface type='bridge'>
        <source bridge='virbr0' />
    </interface>
    <disk type='file' device='disk'>
      <driver name='tap2'/>
      <source file='/root/vm/libvirt-1.img'/>
      <target dev='xvda1' bus='xen'/>
    </disk>
    <console type='pty'>
      <target type='xen' port='0'/>
    </console>
  </devices>
</domain>

